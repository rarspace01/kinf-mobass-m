<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".HowToActivity">

    <TextView
            android:id="@+id/lblEasyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126dp"
            android:maxLines="5"
            android:maxWidth="300dp"
            android:ellipsize="end"
            android:text="@string/easydescprition"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:onClick="expandEasy"
            android:clickable="true"/>

    <TextView
            android:id="@+id/lblNormalDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblEasyDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:maxLines="5"
            android:maxWidth="300dp"
            android:ellipsize="end"
            android:text="@string/normaldescprition"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:onClick="expandNormal"
            android:clickable="true"/>

</RelativeLayout>